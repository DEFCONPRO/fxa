{
  "ignoreFiles": [
    "../packages/**/tailwind.out.scss"
  ],
  "extends": "stylelint-config-prettier",
  "rules": {
    "declaration-empty-line-before": "never",
    "selector-max-id": [
      2,
      {
        "message": "Using ID selectors is discouraged",
        "severity": "warning"
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "at-root",
          "each",
          "else",
          "error",
          "extend",
          "function",
          "if",
          "include",
          "layer",
          "mixin",
          "return",
          "screen",
          "tailwind",
          "use"
        ]
      }
    ]
  }
}
